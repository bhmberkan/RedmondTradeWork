@using RedmondTradeWork.Models.Entity;
@model List<TblWork>
@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Page Title -->
<div class="page-title light-background">
    <div class="container">
        <h1>Services</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a href="Index">Home</a></li>
                <li class="current">Services</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<br /> <br /> 


@foreach (var x in Model.OrderBy(x => x.WorkID))
{
    if (x.WorkID % 2 != 0)
    {
        <div class="about wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 col-md-6">
                        <div class="about-img">
                            <img src="@x.Photo" alt="Image">
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-6">
                        <div class="section-header text-left">

                            <h2 style="color: rgb(2 24 100)">@x.Title</h2>
                        </div>
                        <div class="about-text">
                            <p style="font: 20px 'playfair display', serif;">
                                @x.Description
                            </p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    }


    else if (x.WorkID % 2 == 0)
    {
        <br />
        <div class="about wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
            <div class="container">
                <div class="row align-items-center">

                    <div class="col-lg-7 col-md-6">
                        <div class="section-header text-left">

                            <h2 style="color: rgb(2 24 100)">@x.Title</h2>
                        </div>
                        <div class="about-text">
                            <p style="font: 20px 'playfair display', serif;">
                                @x.Description
                            </p>


                        </div>
                    </div>

                    <div class="col-lg-5 col-md-6">
                        <div class="about-img">
                            <img src="@x.Photo" alt="Image">
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <br />
    }


}
<br /> <br /> 