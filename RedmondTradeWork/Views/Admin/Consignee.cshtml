@using RedmondTradeWork.Models.Entity;
@model List<TblConsignee>
@{
    ViewBag.Title = "Consignee";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Consignee</h2>


<br />


@using (Html.BeginForm("Consignee", "Admin", FormMethod.Get))
{
    <div class="input-group mb-3">
        @Html.TextBox("search", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "search..." }) &ensp;

        <button type="submit" class="btn btn-warning">Search</button>
    </div>
}



<a href="/Admin/InsertConsignee/" class="btn  btn-outline-info">İnsert</a> &ensp; &ensp;
<br />
<br />





<table class="table table-bordered custom-table">
    <tr>
        <th>#</th>
        <th>Company Name</th>
        <th>Adress</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Tax/OfficeNumber </th>

        <th>Güncelle</th>
        <th>Sil</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <th>@x.CCompanyName</th>
            <td>@x.CAdress</td>
            <td>@x.CTelefon</td>
            <td>@x.CEmail</td>
            <td>@x.CTaxOfficeNumber</td>







            <td><a href="/Admin/UpdateConsignee/@x.ID" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>
            <td><a href="/Admin/DeleteConsignee/@x.ID" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>




        </tr>

    }
</table>


<style>
    table.custom-table th {
        font-size: 11px; /* Yazı boyutunu belirleyin */
        font-weight: 400; /* Yazı kalınlığı (isteğe bağlı) */
        text-align: center; /* Yazıları ortalar */
        padding: 8px; /* Hücre içi boşluk */
    }
</style>