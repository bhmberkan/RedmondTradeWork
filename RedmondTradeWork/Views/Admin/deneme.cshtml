<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // CCompanylist Dropdown'da bir değişiklik olduğunda tetiklenir
        $('#CCompanylist').change(function () {
            // Seçilen indeks değerini al
            var selectedIndex = $(this).prop('selectedIndex');

            // Diğer DropDownList'lerin seçimini güncelle
            $('#CAdreslist').prop('selectedIndex', selectedIndex);
            $('#CTelList').prop('selectedIndex', selectedIndex);
            $('#CEmaillist').prop('selectedIndex', selectedIndex);
            $('#CtaxOfficeList').prop('selectedIndex', selectedIndex);
        });



        // Shipper için işlev
        $('#SCompanylist').change(function () {
            var selectedIndex = $(this).prop('selectedIndex');

            $('#SAdreslist').prop('selectedIndex', selectedIndex);
            $('#STelList').prop('selectedIndex', selectedIndex);
            $('#SEmaillist').prop('selectedIndex', selectedIndex);
            $('#StaxOfficeList').prop('selectedIndex', selectedIndex);
        });



        // Shipper için işlev
        $('#UrunList').change(function () {
            var selectedIndex = $(this).prop('selectedIndex');

            $('#DescriptionList').prop('selectedIndex', selectedIndex);
            $('#UnitpriceList').prop('selectedIndex', selectedIndex);
            $('#ContainerList').prop('selectedIndex', selectedIndex);
            $('#WeightList').prop('selectedIndex', selectedIndex);
            $('#HsList').prop('selectedIndex', selectedIndex);
        });









    });
</script>
