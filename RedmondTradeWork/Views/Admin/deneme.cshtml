


@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proforma Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            width: 100%; /* Sayfa genişliğini tam yap */
            height: 100%; /* Sayfa yüksekliğini tam yap */
        }

        .invoice-container {
            width: 90%;
            max-width: 1200px;
            margin: 20px auto;
            border: 1px solid #000;
            padding: 20px;
            font-size: 12px;
            overflow-x: auto;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 20px;
            background-color: #f2f2f2;
        }

            .header h1 {
                margin: 0;
                font-size: 24px;
                text-transform: uppercase;
                color: #000;
            }

            .header p {
                margin: 5px 0;
            }

        .section {
            margin-bottom: 20px;
        }

            .section h2 {
                margin: 0 0 10px 0;
                font-size: 14px;
                font-weight: bold;
                border-bottom: 1px solid #000;
                padding-bottom: 5px;
                background-color: #dae8fc;
                padding: 5px;
            }

            .section table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 10px;
            }

            .section th, .section td {
                border: 1px solid #000;
                padding: 8px;
                text-align: left;
            }

            .section th {
                background-color: #f2f2f2;
                width: 200px;
            }

        /* Invoice Table Styles */
        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .invoice-table th, .invoice-table td {
                border: 1px solid #000;
                padding: 8px;
                text-align: center;
            }

            .invoice-table th {
                background-color: #f2f2f2;
            }

        /* Totals Section */
        .totals {
            width: 100%;
            margin-top: 20px;
        }

            .totals p {
                margin: 5px 0;
                text-align: right;
            }

        /* Footer Styles */
        .footer {
            text-align: center;
            border-top: 2px solid #000;
            padding-top: 10px;
            margin-top: 20px;
        }

        /* Signature Section */
        .signature {
            margin-top: 30px;
            height: 100px;
            border: 1px dashed #000;
            text-align: center;
            line-height: 100px;
            font-style: italic;
            color: #777;
        }

        .dropdownsss {
            width: 100%; /* Dropdown'ın genişliğini %100 yap */
            box-sizing: border-box; /* Padding ve border dahil edilerek genişlik ayarlanır */
            border: none; /* Kenarlıkları gizle */
            outline: none; /* Fokuslandığında görünmesini engelle */
            background: none; /* Arka planı sıfırla */
            appearance: none; /* Tarayıcı varsayılan ok işaretini gizler */
            -webkit-appearance: none; /* Webkit tabanlı tarayıcılar için ok işaretini gizler */
            -moz-appearance: none; /* Firefox için ok işaretini gizler */
        }
    </style>
</head>
