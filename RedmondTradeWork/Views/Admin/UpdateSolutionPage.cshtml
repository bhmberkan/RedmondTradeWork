@using RedmondTradeWork.Models.Entity;
@model TblSolution_Partners
@{
    ViewBag.Title = "UpdateSolutionPage";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Update Solution Page</h2>


<br />

@using (Html.BeginForm("UpdateSolutionPages", "Admin", FormMethod.Post))
{

    @Html.HiddenFor(x => x.SolutionPartnersID) // hiddenfor arka planda çalışacak anlamında
    <br />

    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Aciklama Tr")
    @Html.TextAreaFor(x => x.Description, 10, 4, new { @class = "form-control" })
    <br />

    <br />
    @Html.Label("Aciklama En")
    @Html.TextAreaFor(x => x.Description_En, 10, 4, new { @class = "form-control" })
    <br />


    <br />
    @Html.Label("Aciklama Fr")
    @Html.TextAreaFor(x => x.Description_Fr, 10, 4, new { @class = "form-control" })
    <br />


    <br />
    @Html.Label("Görsel")
    @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary"> Değişiklikleri Kaydet </button>

}
