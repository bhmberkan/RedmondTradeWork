@using RedmondTradeWork.Models.Entity;
@model TblService
@{
    ViewBag.Title = "UpdateServicePage";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>UpdateServicePage</h2>


@using (Html.BeginForm("UpdateServicePages", "Admin", FormMethod.Post))
{

    @Html.HiddenFor(x => x.ServiceID) // hiddenfor arka planda çalışacak anlamında
    <br />

    @Html.Label("Başlık Tr")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    @Html.Label("Başlık En")
    @Html.TextBoxFor(x => x.Title_En, new { @class = "form-control" })
    <br />

    @Html.Label("Başlık Fr")
    @Html.TextBoxFor(x => x.Title_Fr, new { @class = "form-control" })
    <br />
    @Html.Label("Aciklama Tr")
    @Html.TextAreaFor(x => x.Description, 10, 4, new { @class = "form-control" })
    <br />

    <br />
    @Html.Label("Aciklama En")
    @Html.TextAreaFor(x => x.Description_En, 10, 4, new { @class = "form-control" })
    <br />


    <br />
    @Html.Label("Aciklama Fr")
    @Html.TextAreaFor(x => x.Description_Fr, 10, 4, new { @class = "form-control" })
    <br />


    <br />
    @Html.Label("Görsel")
    @Html.TextBoxFor(x => x.İmage, new { @class = "form-control" })
    <br />

    <br />
    @Html.Label("İcon")
    @Html.TextBoxFor(x => x.ServiceIcon, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary"> Değişiklikleri Kaydet </button>

}
