@using RedmondTradeWork.Models.Entity;
@model List<TblAboutUs>
@{
    ViewBag.Title = "AboutTr";
    Layout = "~/Views/Shared/_Layout - tr.cshtml";
}



<!-- Page Title -->
<div class="page-title light-background">
    <div class="container">
        <h1 style="color: #8e0723 !important">About</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a href="Index">Home</a></li>
                <li class="current">About</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
@foreach (var x in Model)
{<!-- About 2 Section -->
    <section id="about-2" class="about-2 section">

        <div class="container">
            <div class="content">
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-5 col-lg-4 col-xl-4 order-lg-2 offset-xl-1 mb-4">
                        <div class="img-wrap text-center text-md-left" data-aos="fade-up" data-aos-delay="100">
                            <div class="img">
                                <img src="@x.Photo" alt="circle image" class="img-fluid">
                            </div>
                        </div>
                    </div>

                    <div class="offset-md-0 offset-lg-1 col-sm-12 col-md-5 col-lg-5 col-xl-4" data-aos="fade-up">
                        <div class="px-3">
                            <span class="content-subtitle">Our Mission</span>
                            <h2 class="content-title text-start">
                                @x.Title
                            </h2>
                            <p class="lead">
                                @x.Description
                            </p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section> <!-- /About 2 Section --> <!-- Stats Section -->
    <section id="stats" class="stats section light-background">

        <div class="container">

            <div class="row gy-4 justify-content-center">

                <div class="col-lg-5">
                    <div class="images-overlap">
                        <img src="@x.Photo2" alt="student" class="img-fluid img-1" data-aos="fade-up">
                    </div>
                </div>

                <div class="col-lg-4 ps-lg-5">

                    <h2 class="content-title">@x.SubHeadingTitle</h2>
                    <p class="lead">
                        @x.SubHeading
                    </p>


                </div>

            </div>

        </div>
    </section> <!-- /Stats Section -->}


